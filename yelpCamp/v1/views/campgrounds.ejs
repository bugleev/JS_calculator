<% include partials/header %>

  <div class="container mb-3">
    <header class="jumbotron">
      <h1 class="text-center mb-3">Welcome to Campgrounds Page</h1>
      <p class="text-center">View our hand-picked campgrounds</p>
      <p class="row justify-content-center">
        <a href="/campgrounds/new" class="btn btn-primary text-center mb-2">Add Your own campground!</a>
      </p>
    </header>
    <div class="row justify-content-center mb-2">
      <h3>Our mosr popular sites:</h3>
    </div>
    <div class="row justify-content-center">

      <% campgrounds.forEach((camp) => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-2">
          <div class="card bg-light text-center" style="">
            <img src="<%= camp.image %> " alt="Card image cap" class="card-img-top" style="height: 150px;">
            <div class="card-body">
              <h5 class="card-title">
                <%= camp.name %>
              </h5>
              <p class="card-text">Some text here!</p>
              <a href="#" class="btn btn-outline-secondary">See prices</a>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </div>

  <% include partials/footer %>